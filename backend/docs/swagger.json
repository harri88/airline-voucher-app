{
    "swagger": "2.0",
    "info": {
        "description": "API for generating airline voucher seats.",
        "title": "Airline Voucher API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/check": {
            "post": {
                "description": "Checks if vouchers have already been assigned to a specific flight on a specific date.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Vouchers"
                ],
                "summary": "Check if vouchers exist for a flight",
                "parameters": [
                    {
                        "description": "Flight Check Request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.CheckRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/dto.CheckResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/dto.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/dto.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/api/generate": {
            "post": {
                "description": "Generates 3 unique random voucher seats for a flight, fails if they already exist.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Vouchers"
                ],
                "summary": "Generate 3 new voucher seats",
                "parameters": [
                    {
                        "description": "Voucher Generation Request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.GenerateRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/dto.GenerateResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request or Invalid Aircraft",
                        "schema": {
                            "$ref": "#/definitions/dto.ErrorResponse"
                        }
                    },
                    "409": {
                        "description": "Vouchers already generated",
                        "schema": {
                            "$ref": "#/definitions/dto.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/dto.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.CheckRequest": {
            "type": "object",
            "required": [
                "date",
                "flightNumber"
            ],
            "properties": {
                "date": {
                    "description": "Expects YYYY-MM-DD",
                    "type": "string"
                },
                "flightNumber": {
                    "type": "string"
                }
            }
        },
        "dto.CheckResponse": {
            "type": "object",
            "properties": {
                "exists": {
                    "type": "boolean"
                }
            }
        },
        "dto.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "dto.GenerateRequest": {
            "type": "object",
            "required": [
                "aircraft",
                "date",
                "flightNumber",
                "id",
                "name"
            ],
            "properties": {
                "aircraft": {
                    "description": "\"ATR\", \"Airbus 320\", etc.",
                    "type": "string"
                },
                "date": {
                    "description": "Expects YYYY-MM-DD",
                    "type": "string"
                },
                "flightNumber": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "dto.GenerateResponse": {
            "type": "object",
            "properties": {
                "seats": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "success": {
                    "type": "boolean"
                }
            }
        }
    }
}